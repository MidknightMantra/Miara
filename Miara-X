FROM quay.io/midknightmantra/miara-v2
RUN git clone https://github.com/MidknightMantra/Miara /root/miara
RUN rm -rf /root/miara/.git
WORKDIR /root/miara
RUN npm install || yarn install
EXPOSE 8000
CMD ["npm","start" ] 
































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































































