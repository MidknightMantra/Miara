{
  "watch": ["src"],
  "ignore": [
    "node_modules",
    "session/*",
    "session/**/*.json",
    "session/**/*.bin",
    "src/database/*",
    "src/database/**/*.json",
    "logs/*",
    "tmp/*"
  ],
  "ext": "js,json",
  "delay": "500",
  "exec": "node src/main.js",
  "restartable": "rs",
  "env": {
    "NODE_ENV": "development"
  }
}
